    echo '\nâ›”ï¸ There is a problem in the code. âŒ›ï¸ I run linter autofix for you.';

    echo '\nğŸ” Running linter autofix..'
    yarn lint:fix || (
      echo '\nâ›”ï¸ Autofix failed. Please fix the linting errors manually. â›”ï¸';
      false;
