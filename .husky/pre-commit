echo "ğŸ” Checking validity of types with TypeScript"

yarn type-check || (
    "\nâ›”ï¸ There is a type error in the code, fix it, and try commit again. â›”ï¸";
    false;
    )


echo "\nâœ… No TypeError found"
echo "\nğŸ” Running linter.."

